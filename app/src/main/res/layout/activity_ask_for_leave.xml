<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/status_bar"/>

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/ask_for_leave_time"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="?colorAccent"
        android:theme="@style/Theme.AppCompat.Light"/>


    <TextView
        android:id="@+id/std_ask_for_leave_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_today_grey_500_24dp"
        android:drawablePadding="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="2015-11-11"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/ask_for_leave_reason"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="?colorAccent"
        android:theme="@style/Theme.AppCompat.Light"/>

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/std_ask_for_leave_reason"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:gravity="top"
        android:hint="@string/ask_for_leave_reason"/>

</LinearLayout>