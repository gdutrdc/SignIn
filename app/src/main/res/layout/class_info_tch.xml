<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/ClassInfoItem">

            <TextView
                style="@style/ClassInfoItemDescription"
                android:text="教室"/>

            <TextView
                android:id="@+id/tch_class_loc"
                style="@style/ClassInfoItemContent"/>
        </LinearLayout>

        <LinearLayout
            style="@style/ClassInfoItem">

            <TextView
                style="@style/ClassInfoItemDescription"
                android:text="上课时间"/>

            <TextView
                android:id="@+id/tch_class_time"
                style="@style/ClassInfoItemContent"/>
        </LinearLayout>

        <LinearLayout
            style="@style/ClassInfoItem">

            <TextView
                style="@style/ClassInfoItemDescription"
                android:text="总课时"/>

            <TextView
                android:id="@+id/tch_class_hour"
                style="@style/ClassInfoItemContent"/>
        </LinearLayout>

        <LinearLayout
            style="@style/ClassInfoItem">

            <TextView
                style="@style/ClassInfoItemDescription"
                android:text="课程简介"/>

            <TextView
                android:id="@+id/tch_class_about"
                style="@style/ClassInfoItemContent"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>